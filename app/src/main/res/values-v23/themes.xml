<resources>

    <style name="Theme.AIMA" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/backgroundBottomColour</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="CustomProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <!-- Customize other attributes if needed -->
        <item name="android:progressTint">@color/gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <color name="statusBarColor">@color/white</color>


</resources>