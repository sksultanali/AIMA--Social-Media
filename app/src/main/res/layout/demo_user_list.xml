<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="@dimen/_5mdp"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10mdp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/followProfile"
            android:layout_width="@dimen/_50mdp"
            android:layout_height="@dimen/_50mdp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/imagelogo"
            android:src="@drawable/profileplaceholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/followProfile"
            app:layout_constraintStart_toEndOf="@+id/followProfile"
            app:layout_constraintTop_toTopOf="@+id/followProfile">

            <View
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@color/darkGray" />
            <View
                android:layout_width="180dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/_5mdp"
                android:background="@color/gray" />
            <View
                android:layout_width="180dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/_5mdp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/followButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:paddingTop="@dimen/_5mdp"
                android:background="@color/darkGray"
                android:paddingBottom="@dimen/_5mdp" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>