<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour"
    tools:context=".BottomBar.HomeFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linearLayout113"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/myProfile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/imagelogo"
                        android:src="@drawable/profileplaceholder"
                        app:civ_border_color="@color/main_light_yellow"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/signika_negative_bold"
                        android:text="@string/aima_discover"
                        android:textColor="@color/backgroundBottomColour"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/camera"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/click_effect_oval"
                            android:contentDescription="@string/imagelogo"
                            android:padding="5dp"
                            android:src="@drawable/camera_24" />

                        <ImageView
                            android:id="@+id/search"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="@dimen/_10mdp"
                            android:background="@drawable/click_effect_oval"
                            android:contentDescription="@string/imagelogo"
                            android:padding="5dp"
                            android:src="@drawable/black_search_24" />

                        <LinearLayout
                            android:id="@+id/notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/click_effect_oval"
                                android:contentDescription="@string/imagelogo"
                                android:padding="5dp"
                                android:src="@drawable/notifications_24" />
                        </LinearLayout>

                        <View
                            android:id="@+id/notificationBadge"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/badge_drawable"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/_10mdp"
                            android:visibility="invisible" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout113"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/purple_500"
                    app:tabTextAppearance="@style/TabLayout"
                    app:tabTextColor="@color/backgroundBottomColour" />

                <LinearLayout
                    android:id="@+id/segment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout">

                    <LinearLayout
                        android:id="@+id/add_post"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/post_click_effect"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:text="What's on your mind?" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout300"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_weight="1"
                            android:text="Posts"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/add_membership"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5mdp"
                            android:background="@drawable/click_effect"
                            android:drawableLeft="@drawable/member_24"
                            android:drawablePadding="@dimen/_5mdp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:paddingStart="@dimen/_10mdp"
                            android:paddingTop="@dimen/_5mdp"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingBottom="@dimen/_5mdp"
                            android:text="Membership"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/add_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_2mdp"
                            android:background="@drawable/click_effect"
                            android:drawableLeft="@drawable/currency_rupee_24"
                            android:drawablePadding="@dimen/_5mdp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10mdp"
                            android:paddingTop="@dimen/_5mdp"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingBottom="@dimen/_5mdp"
                            android:text="Donate"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/discover_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2mdp"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@+id/segment" />

                <TextView
                    android:id="@+id/nextBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_10mdp"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:background="@drawable/post_click_effect"
                    android:text="See More"
                    android:padding="@dimen/_10mdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/discover_recyclerView" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Small.FadingCircle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10mdp"
        app:SpinKit_Color="@color/backgroundBottomColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/openClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40mdp"
        android:background="@drawable/home_features_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5mdp"
        android:paddingTop="@dimen/_10mdp"
        android:paddingBottom="@dimen/_10mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/featuresOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8mdp"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/donation_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/_8mdp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/currency_rupee_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/member_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/_8mdp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/member_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/close_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/close_24" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/openBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/_5mdp"
            android:rotation="90"
            android:src="@drawable/arrow_back_ios_new_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/closeBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/_5mdp"
            android:rotation="-90"
            android:src="@drawable/arrow_back_ios_new_24"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
