<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour"
    android:orientation="vertical"
    tools:context=".Activities.GalleryActivity">


    <LinearLayout
        android:id="@+id/profClick"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/_8mdp"
        android:paddingBottom="@dimen/_8mdp"
        android:paddingEnd="@dimen/_10mdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/_8mdp"
            android:layout_marginEnd="@dimen/_8mdp"
            app:tint="@color/black"
            android:src="@drawable/back_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5mdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/discoverProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AIMA Gallery"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/verifiedProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/verified"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/addedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/public_24"
                android:drawablePadding="@dimen/_5mdp"
                android:drawableTint="@color/black"
                android:text="@string/loading"
                android:singleLine="true"
                android:textSize="@dimen/_10font_mdp"
                android:textColor="@color/black" />
        </LinearLayout>
        <ImageView
            android:id="@+id/shareGallery"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/drawable_gray"
            android:visibility="gone"
            android:src="@drawable/share_24"/>
        <LinearLayout
            android:id="@+id/showImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/back_white_gray_stroke_click_effect"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            app:layout_constraintEnd_toStartOf="@+id/imgFilter"
            app:layout_constraintTop_toTopOf="@+id/cons">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5mdp"
                android:src="@drawable/view_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View "
                android:textSize="@dimen/_12font_mdp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/galleryCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="13sp"
        android:paddingTop="@dimen/_5mdp"
        android:paddingStart="@dimen/_10mdp"
        android:paddingEnd="@dimen/_10mdp"
        android:paddingBottom="@dimen/_5mdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/loading_please_wait"
        app:layout_constraintTop_toBottomOf="@+id/profileSegment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Small.FadingCircle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/_10mdp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/backgroundBottomColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spanCount="3"
        android:layout_marginStart="@dimen/_5mdp"
        android:layout_marginEnd="@dimen/_5mdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_post_profile"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/_8mdp"/>

</LinearLayout>