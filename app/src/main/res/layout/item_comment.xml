<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CommentsProfileImage"
        android:layout_width="@dimen/_35mdp"
        android:layout_height="@dimen/_35mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_gravity="center"
        android:contentDescription="@string/imagelogo"
        android:src="@drawable/placeholder"
        app:civ_border_color="@color/main_light_yellow"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/_10mdp"
        android:background="@drawable/background_white_linear"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10mdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/commentProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/_11font_mdp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/verifiedProfile"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/verified"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/actualComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Profile"
            android:textSize="@dimen/_11font_mdp"
            android:fontFamily="@font/manrope_medium"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>