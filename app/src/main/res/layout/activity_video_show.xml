<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AIMA"
    android:background="@color/backgroundColour"
    tools:context=".Activities.VideoShow">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_post_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoPlay="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profileSegment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_5mdp"
        android:paddingEnd="@dimen/_5mdp"
        android:paddingTop="@dimen/_10mdp"
        android:paddingBottom="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_post_view">

        <LinearLayout
            android:id="@+id/videoProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_10mdp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/discoverProfileImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/imagelogo"
                android:src="@drawable/placeholder"
                app:civ_border_color="@color/main_light_yellow"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="@+id/story"
                app:layout_constraintTop_toTopOf="@+id/story" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/discoverProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aima Official"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/verifiedProfile"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/verified"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/discoverProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/public_24"
                    android:drawablePadding="@dimen/_5mdp"
                    android:drawableTint="@color/black"
                    android:singleLine="true"
                    android:textSize="@dimen/_10font_mdp"
                    android:text="Public Profile - 3m ago -"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/videoShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10mdp"
            android:src="@drawable/share_24"
            app:layout_constraintEnd_toEndOf="@+id/story"
            app:layout_constraintTop_toTopOf="@+id/story"
            app:tint="#757272" />



    </LinearLayout>
    <TextView
        android:id="@+id/discoverCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_5mdp"
        android:layout_marginEnd="@dimen/_5mdp"
        android:paddingTop="@dimen/_5mdp"
        android:paddingStart="@dimen/_5mdp"
        android:paddingEnd="@dimen/_5mdp"
        android:paddingBottom="@dimen/_10mdp"
        android:text="@string/sample_caption"
        app:layout_constraintTop_toBottomOf="@+id/profileSegment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>