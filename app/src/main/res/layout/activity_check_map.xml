<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CheckMapActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <AutoCompleteTextView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for a stall"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:visibility="gone"
            android:background="@android:color/white"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/searchTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10mdp"
            android:elevation="@dimen/_15mdp"
            android:layout_margin="@dimen/_20mdp"
            android:textSize="@dimen/_12font_mdp"
            android:drawablePadding="@dimen/_5mdp"
            android:drawableTint="@color/icon_color"
            android:drawableStart="@drawable/location_pin_24"
            android:drawableEnd="@drawable/search_24"
            android:textColor="@color/black"
            android:background="@drawable/bg_white_corber20"
            android:text="Search Here"/>

        <LinearLayout
            android:id="@+id/mapType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/searchTxt"
            android:layout_below="@id/searchTxt"
            android:elevation="@dimen/_15mdp"
            android:background="@drawable/oval_click_effect_white_gray"
            android:layout_marginEnd="@dimen/_5mdp"
            android:padding="@dimen/_5mdp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_20mdp"
                android:layout_height="@dimen/_20mdp"
                app:tint="@color/icon_color"
                android:src="@drawable/layers_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/mapType"
            android:layout_above="@id/linLayout"
            android:elevation="@dimen/_15mdp"
            android:layout_marginBottom="@dimen/_25mdp"
            android:background="@drawable/oval_click_effect_white_gray"
            android:padding="@dimen/_5mdp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_20mdp"
                android:layout_height="@dimen/_20mdp"
                app:tint="@color/icon_color"
                android:src="@drawable/my_location_24"/>
        </LinearLayout>

<!--        <Spinner-->
<!--            android:id="@+id/filter_spinner"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/searchTxt"-->
<!--            android:layout_margin="16dp" />-->

        <LinearLayout
            android:id="@+id/linLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:orientation="vertical"
            android:elevation="@dimen/_15mdp"
            android:padding="@dimen/_15mdp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/manrope_extrabold"
                        android:textSize="@dimen/_14font_mdp"
                        android:text="Navigation Map"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11font_mdp"
                        android:fontFamily="@font/manrope_extrabold"
                        android:text="Presented by AIMA- Social App"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/shareBtn"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    app:tint="@color/icon_color"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:background="@drawable/oval_click_effect_white_gray"
                    android:src="@drawable/share_24"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoBox"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_60mdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_extrabold"
                        android:textSize="@dimen/_12font_mdp"
                        android:text="Navigation Map"/>
                    <TextView
                        android:id="@+id/descriptionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_extrabold"
                        android:textSize="@dimen/_11font_mdp"
                        android:text="Presented by AIMA- Social App"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/closeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5mdp"
                            android:background="@drawable/button_follow_background"
                            android:drawablePadding="@dimen/_5mdp"
                            android:paddingStart="@dimen/_10mdp"
                            android:paddingTop="@dimen/_5mdp"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingBottom="@dimen/_5mdp"
                            android:fontFamily="@font/manrope_extrabold"
                            android:text="Close"
                            android:textColor="@drawable/text_colour_with_follow_btn"
                            android:textSize="@dimen/_10font_mdp" />
                        <TextView
                            android:id="@+id/startBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_follow_background"
                            android:drawablePadding="@dimen/_5mdp"
                            android:paddingStart="@dimen/_10mdp"
                            android:paddingTop="@dimen/_5mdp"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingBottom="@dimen/_5mdp"
                            android:fontFamily="@font/manrope_extrabold"
                            android:text="Start"
                            android:textColor="@drawable/text_colour_with_follow_btn"
                            android:textSize="@dimen/_10font_mdp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tutorialLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11font_mdp"
                android:padding="@dimen/_5mdp"
                android:fontFamily="@font/manrope_extrabold"
                android:layout_marginTop="@dimen/_10mdp"
                android:background="@drawable/bg_gray_round_corner"
                android:text="Confusing? See tutorial...(click here)"/>
        </LinearLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>