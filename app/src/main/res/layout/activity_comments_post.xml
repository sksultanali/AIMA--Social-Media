<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColour"
    tools:context=".Activities.Comments_Post">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backComments"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/back_24"
            app:tint="@color/backgroundBottomColour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_extrabold"
            android:text="Comments"
            android:textColor="@color/backgroundBottomColour"
            android:textSize="@dimen/_14font_mdp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/_8mdp"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_comment" />

    <TextView
        android:id="@+id/textNoComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="no comments yet !"
        android:visibility="gone"
        android:textSize="@dimen/_11font_mdp"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginTop="@dimen/_150mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_linear"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/_10mdp"
        app:layout_constraintBottom_toBottomOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commenterProfileImage"
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_35mdp"
            android:contentDescription="@string/imagelogo"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:src="@drawable/profileplaceholder"
            app:civ_border_color="@color/main_light_yellow"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/commentImage"
            app:layout_constraintStart_toStartOf="@+id/commentImage" />
        <TextView
            android:id="@+id/commentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:paddingStart="@dimen/_10mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:gravity="center"
            android:textSize="@dimen/_12font_mdp"
            android:fontFamily="@font/manrope_medium"
            android:background="@drawable/button_follow_background"
            android:textColor="@drawable/text_colour_with_follow_btn"
            android:text="Write a comment"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>