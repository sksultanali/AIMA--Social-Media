<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/meetingback"
    tools:context=".BottomBar.MeetingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_10mdp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_35mdp"
            app:civ_border_width="1dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/main_light_yellow"
            android:layout_marginStart="5dp"
            android:src="@drawable/aimalogo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_extrabold"
                android:text="Join Meeting"
                android:textColor="@color/backgroundBottomColour"
                android:textSize="@dimen/_14font_mdp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_medium"
                android:singleLine="true"
                android:text="Enter random code, join and share"
                android:textColor="@color/black"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/video"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="@dimen/_11font_mdp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:text="Please enter secret code to join with members. Do not share with unknown people" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_secret_code"
                android:layout_margin="@dimen/_10mdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_11font_mdp"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/joinBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_2mdp"
                    android:padding="@dimen/_5mdp"
                    android:textSize="@dimen/_11font_mdp"
                    android:gravity="center"
                    android:fontFamily="@font/manrope_extrabold"
                    android:textColor="@drawable/text_colour_with_follow_btn"
                    android:background="@drawable/button_follow_background"
                    android:text="Join"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/join_inner_24"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/shareBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:padding="@dimen/_5mdp"
                    android:textSize="@dimen/_11font_mdp"
                    android:fontFamily="@font/manrope_extrabold"
                    android:textStyle="bold"
                    android:textColor="@drawable/text_colour_with_follow_btn"
                    android:background="@drawable/button_follow_background"
                    android:drawableLeft="@drawable/share_24"
                    android:drawablePadding="@dimen/_5mdp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_2mdp"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>