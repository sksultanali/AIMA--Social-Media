            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:text="Fill Form"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/openChrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10mdp"
            android:background="@drawable/click_effect"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:text="1. With Google Chrome (Preferred)"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:text="or"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/openApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginBottom="@dimen/_10mdp"
            android:background="@drawable/click_effect"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:text="2. With App"
            android:textColor="@color/black" />

    </LinearLayout>

