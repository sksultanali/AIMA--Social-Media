<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour"
    tools:context=".Forms.MembershipApply">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:background="@drawable/background_white_linear"
        android:orientation="vertical"
        android:padding="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stepName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16mdp"
            app:sv_animationType="Line"
            app:sv_doneCircleColor="@color/backgroundBottomColour"
            app:sv_doneCircleRadius="12dp"
            app:sv_doneStepLineColor="@color/backgroundBottomColour"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneTextColor="@color/backgroundBottomColour"
            app:sv_nextStepCircleColor="@color/backgroundColour"
            app:sv_nextStepLineColor="@color/backgroundBottomColour"
            app:sv_nextTextColor="@color/black"
            app:sv_selectedCircleColor="@color/backgroundColour"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/backgroundBottomColour"
            app:sv_selectedTextColor="@color/backgroundBottomColour"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="12sp"
            app:sv_stepPadding="4dp"
            app:sv_stepViewStyle="@style/StepView" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/step01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10mdp"
        android:background="@drawable/react_background"
        android:orientation="vertical"
        android:padding="@dimen/_10mdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
