<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomBar.HomeUIFragment">

    <LinearLayout
        android:id="@+id/linearLayout113"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/imagelogo"
            android:src="@drawable/profileplaceholder"
            app:civ_border_color="@color/main_light_yellow"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/signika_negative_bold"
            android:text="@string/aima_discover"
            android:textColor="@color/backgroundBottomColour"
            android:textSize="@dimen/_16font_mdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/click_effect_oval"
                android:contentDescription="@string/imagelogo"
                android:padding="5dp"
                android:src="@drawable/camera_24" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:background="@drawable/click_effect_oval"
                android:contentDescription="@string/imagelogo"
                android:padding="5dp"
                android:src="@drawable/black_search_24" />

            <LinearLayout
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/click_effect_oval"
                    android:contentDescription="@string/imagelogo"
                    android:padding="5dp"
                    android:src="@drawable/notifications_24" />
            </LinearLayout>

            <View
                android:id="@+id/notificationBadge"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/badge_drawable"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_10mdp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout113">

        <TextView
            android:id="@+id/add_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/post_click_effect"
            android:text="What's on your mind?" />
        <LinearLayout
            android:id="@+id/linearLayout300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_weight="1"
                android:text="Aima ❤️s You"
                android:textSize="@dimen/_10font_mdp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/add_membership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5mdp"
                android:background="@drawable/click_effect"
                android:drawableLeft="@drawable/member_24"
                android:drawablePadding="@dimen/_5mdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10mdp"
                android:paddingTop="@dimen/_5mdp"
                android:paddingEnd="@dimen/_10mdp"
                android:paddingBottom="@dimen/_5mdp"
                android:text="Membership"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/add_donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2mdp"
                android:background="@drawable/click_effect"
                android:drawableLeft="@drawable/currency_rupee_24"
                android:drawablePadding="@dimen/_5mdp"
                android:gravity="center"
                android:paddingStart="@dimen/_10mdp"
                android:paddingTop="@dimen/_5mdp"
                android:paddingEnd="@dimen/_10mdp"
                android:paddingBottom="@dimen/_5mdp"
                android:text="Donate"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5mdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pdfsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_round_corner"
                android:elevation="@dimen/_3mdp"
                android:orientation="vertical"
                android:padding="@dimen/_10mdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDFs"
                    android:textColor="@color/backgroundBottomColour"
                    android:textSize="@dimen/_14font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="docs and notices"
                    android:textSize="@dimen/_12font_mdp" />

<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:id="@+id/animation_view"-->
<!--                    android:layout_width="@dimen/_60mdp"-->
<!--                    android:layout_height="@dimen/_50mdp"-->
<!--                    android:layout_marginTop="@dimen/_8mdp"-->
<!--                    android:layout_gravity="center"-->
<!--                    app:lottie_loop="true"-->
<!--                    app:lottie_rawRes="@raw/pdf_anim"-->
<!--                    app:lottie_autoPlay="true"/>-->
                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:src="@drawable/pdf_img" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/galeryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_round_corner"
                android:elevation="@dimen/_3mdp"
                android:orientation="vertical"
                android:padding="@dimen/_10mdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textColor="@color/backgroundBottomColour"
                    android:textSize="@dimen/_14font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="see our event images"
                    android:textSize="@dimen/_12font_mdp" />

<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:layout_width="@dimen/_60mdp"-->
<!--                    android:layout_height="@dimen/_50mdp"-->
<!--                    android:layout_marginTop="@dimen/_8mdp"-->
<!--                    android:layout_gravity="center"-->
<!--                    app:lottie_loop="true"-->
<!--                    app:lottie_rawRes="@raw/gallery_anim"-->
<!--                    app:lottie_autoPlay="true"/>-->

                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:src="@drawable/picture_gallery" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/postLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5mdp"
                    android:background="@drawable/bg_white_round_corner"
                    android:elevation="@dimen/_3mdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10mdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public Posts"
                        android:textColor="@color/backgroundBottomColour"
                        android:textSize="@dimen/_14font_mdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="public posts here"
                        android:textSize="@dimen/_12font_mdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adminLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_round_corner"
                    android:elevation="@dimen/_3mdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10mdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Posts"
                        android:textColor="@color/backgroundBottomColour"
                        android:textSize="@dimen/_14font_mdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="all admin posts"
                        android:textSize="@dimen/_12font_mdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videosLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5mdp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@drawable/bg_white_round_corner"
                android:elevation="@dimen/_3mdp"
                android:orientation="vertical"
                android:padding="@dimen/_10mdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:textColor="@color/backgroundBottomColour"
                    android:textSize="@dimen/_14font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="see our event images"
                    android:textSize="@dimen/_12font_mdp" />

<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:layout_width="@dimen/_60mdp"-->
<!--                    android:layout_height="@dimen/_50mdp"-->
<!--                    android:layout_marginTop="@dimen/_8mdp"-->
<!--                    app:lottie_loop="true"-->
<!--                    android:layout_gravity="end"-->
<!--                    app:lottie_rawRes="@raw/videos_anim"-->
<!--                    app:lottie_autoPlay="true"/>-->

                <ImageView
                    android:layout_width="@dimen/_60mdp"
                    android:layout_height="@dimen/_60mdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:src="@drawable/videos_img" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="All Rights Reserved @ AIMA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

    <LinearLayout
        android:id="@+id/openClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40mdp"
        android:background="@drawable/home_features_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5mdp"
        android:paddingTop="@dimen/_10mdp"
        android:paddingBottom="@dimen/_10mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/featuresOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8mdp"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/donation_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/_8mdp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/currency_rupee_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/member_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/_8mdp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/member_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/close_feature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_oval"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/close_24" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/openBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/_5mdp"
            android:rotation="90"
            android:src="@drawable/arrow_back_ios_new_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/closeBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/_5mdp"
            android:rotation="-90"
            android:src="@drawable/arrow_back_ios_new_24"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>