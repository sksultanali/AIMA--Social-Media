<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Slide from right to left -->
    <translate
        android:duration="800"
        android:fromXDelta="100%"
        android:toXDelta="0%" />
    <!-- Fade in effect -->
    <alpha
        android:duration="800"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>